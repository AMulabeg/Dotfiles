set $wallpaper ~/.config/wallpapers/656136-final_1.png

set $term wezterm
set $browser firefox


exec xss-lock -- swaylock

exec --no-startup-id dex --autostart --environment sway
# exec --no-startup-id blueman-applet
exec --no-startup-id wlsunset -l 52.48 -L 13.43
exec --no-startup-id swaync
# exec --no-startup-id nm-applet --indicator
exec --no-startup-id autotiling
exec --no-startup-id ghostty --gtk-single-instance=true --quit-after-last-window-closed=false

exec --no-startup-id {
  firefox
  zapzap
  vesktop
}

